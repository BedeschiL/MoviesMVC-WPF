@using DTO_DataTransferObject
@model MovieWEB.Models.DetailsModel
@{
    ViewData["Title"] = "Details Page";
}
<h1>Details</h1>
<div class="text-center">
    <table class="table-bordered">
        <thead>
            <tr>
                <th width="50">Id</th>
                <th width="200">Affiche</th>
                <th width="150">Titre</th>
                <th width="100">Duree</th>
                <th width="200">Note Moyenne</th>

            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.Id</th>
                <td>
                    <img src="@Model.Posterpath" height="200" />
                </td>
                <td>@Model.Title</td>
                <td>@Model.runtimeToString</td>
                <td>@Model.VoteAverage</td>
               

                @*<td>
            @Html.ActionLink("Details", "Details", "Home", new { ID = item.Id });
        </td>*@
            </tr>


        </tbody>
    </table>
    <h1>ACTEURS :</h1>
    <table class="table-bordered">
        <thead>
            <tr>
                <th width="150">Id</th>
                <th width="150">Name</th>
                <th width="100">Details</th>
            </tr>
        </thead>
        <tbody>

            @foreach (ActorDTO a in Model.ActorsDTO)
            {
    <tr>
        <td>@a.Id</td>
        <td>@a.Name</td>

        <td>
            @Html.ActionLink("ActorDetail", "ActorDetail", "ActorDetail", new { test = a.Id.ToString() })
            @Html.ActionLink("test", "test", "test", new { ID = a.Id })

        </td>
    </tr>
}

        </tbody>
    </table>
    <h1>COMMENTAIRES :</h1>
    <table class="table-bordered">
        <thead>
            <tr>
                <th width="500">CONTENT</th>
                <th width="150">DATE</th>
                <th width="100">RATE</th>
                <th width="150">USERNAME</th>
            </tr>
        </thead>
        <tbody>

            @foreach (CommentDTO c in Model.CommentsDTO)
            {
        <tr>
            <td>@c.Content</td>
            <td>@c.Date</td>
            <td>@c.Rate</td>
            <td>@c.Content</td>
        </tr>
}


        </tbody>
    </table>
</div>
