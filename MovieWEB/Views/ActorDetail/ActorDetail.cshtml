@using GUImovieWEB.Models
@model ActeurUImodel
@{
    ViewData["Title"] = "ActeurDetail Page";
}


<h1>
    <img style="display: block; margin-left: auto; margin-right: auto;" width="185" height="278" src="@Model.avatar" />
</h1>
<div>


    <h1 style="padding-left:42%;">ACTEUR :</h1>
    <table class="table-bordered" style="height: 54px; width: 353px;">
        <thead>
            <tr style="height: 36px;">
                <th style="height: 36px; width: 98px;"><em>Name</em></th>
                <th style="height: 36px; width: 117px;">Date de naissance</th>
                <th style="height: 36px; width: 127px;">Lieu de naissance</th>
            </tr>
        </thead>
        <tbody>
            <tr style="height: 18px;">
                <td style="height: 18px; width: 98px;">@Model.Name</td>
