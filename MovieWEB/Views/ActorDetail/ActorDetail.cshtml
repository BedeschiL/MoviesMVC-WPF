                <td style="height: 18px; width: 127px;">@Model.birthplace</td>
            </tr>
        </tbody>
    </table>
    <table class="table-bordered" style="height: 54px; width: 800px;">
        <thead>
            <tr style="height: 36px;">
                <th style="height: 36px; width: 98px;"><em>Biographie :</em></th>
            </tr>
        </thead>
        <tbody>
            <tr style="height: 18px;">
                <td style="height: 18px; width: 98px;">@Model.resume</td>

            </tr>
        </tbody>
    </table>

    <h3>LISTE DES FILMS DE L'ACTEUR :</h3>
