@model ListFilmModel

<h1>Recherche </h1>
<div class="text-center">
    <table class="table-bordered">
        <thead>
            <tr>
                <th width="50">Id</th>
                <th width="150">Affiche</th>
                <th width="150">Titre</th>
                <th width="100">Duree</th>
                <th width="200">Note Moyenne</th>
                <th width="200">Details</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Films)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>
                        <img src="@item.Posterpath" width="100" />
                    </td>

                    <td>@item.Title</td>
                    <td>@item.runtimeToString</td>
                    @{
                        if (item.VoteAverage == 0)
                        {
                            <td>Aucun vote</td>
                        }
                        else
                        {
                            <td>@item.VoteAverage</td>
                        }
                    }
                    <td>
                        @Html.ActionLink("Details", "Details", "Details", new { ID = item.Id });
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
@{
    ListFilmModel temp = Model;
    temp.name = Model.name;


}
<table align="center">
    <tr>

        <td>
            @Html.ActionLink("Precedent", "Recherche", "Recherche", new { test = temp.name, localisation = "prec" });
        </td>
        <td>
            @Html.ActionLink("Suivant", "Recherche", "Recherche", new { test = temp.name, localisation ="suiv"});
        </td>
    </tr>
</table>

