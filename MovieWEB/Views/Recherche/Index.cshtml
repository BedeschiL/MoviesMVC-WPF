@model ListFilmModel

<h1>Recherche </h1>
<div class="text-center">
    <table class="table-bordered">
        <thead>
            <tr>
                <th width="50">Id</th>
                <th width="150">Affiche</th>
                <th width="150">Titre</th>
                <th width="100">Duree</th>
                <th width="200">Note Moyenne</th>
                <th width="200">Details</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Films)
            {

                <tr>
                    <th scope="row">@item.Id</th>
                    <td>
                        <img src="@item.Posterpath" width="100" />
                    </td>

                    <td>@item.Title</td>
                    <td>@item.runtimeToString</td>
                    @{
                        if (item.VoteAverage == 0)
                        {
                            <td>Aucun vote</td>
                        }
                        else
                        {
                            <td>@item.VoteAverage</td>
                        }
                    }
                    <td>
                        @Html.ActionLink("⚙", "Details", "Details", new { ID = item.Id})
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<table align="center">
    <tr>
        <td><a class="nav-link text-dark" data="1" asp-area="" asp-controller="Recherche" asp-action="BouttonPrevious">Precedent</a></td>
        <td><a class="nav-link text-dark"  asp-area="" asp-controller="Recherche" asp-action="BouttonNext">Suivant</a></td>
    </tr>
</table>
